{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "name": "vorta/phalcon-base",
    "description": "Phalcon Project Base",
    "type": "project",
    "authors": [
        {
            "name": "Vorta",
            "email": "vorta13@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3",
        "ext-curl": "*",
        "ext-mbstring": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-yaml": "*",
        "ext-phalcon": "^3.4",
        "ext-ds": "*"
    },
    "require-dev": {
        "fabfuel/prophiler": "^1.6",
        "phpstan/phpstan": "^0.11.2",
        "squizlabs/php_codesniffer": "^3.4",
        "symfony/var-dumper": "^4.2",
        "vlucas/phpdotenv": "^3.3",
        "phpmd/phpmd": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "Project\\": "src/"
        },
        "files": [
            "helpers/project_root.php",
            "helpers/translate.php"
        ]
    }
}
